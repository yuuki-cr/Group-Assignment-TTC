<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="94dp"
            android:fontFamily="sans-serif-light"
            android:paddingStart="30dp"
            android:text="32째"
            android:textColor="@color/black"
            android:textSize="48sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperature"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:paddingStart="30dp"
            android:text="Country name"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="131dp"
            android:layout_height="111dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="Weather image"
            android:src="@drawable/cloudy_img" />

        <TextView
            android:id="@+id/temperatureRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:layout_marginTop="46dp"
            android:paddingStart="30dp"
            android:textSize="12sp"
            android:text="34째/21째"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/feelsLikeTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/temperatureRange"
            android:layout_below="@+id/country"
            android:layout_marginTop="46dp"
            android:textSize="12sp"
            android:paddingStart="5dp"
            android:text="Feels like 38째"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperatureRange"
            android:textSize="12sp"
            android:paddingStart="30dp"
            android:text="Wed, 7.54pm"
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/weather1d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>